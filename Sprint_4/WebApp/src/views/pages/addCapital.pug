extends ../layouts/layout.pug

block content
    //- Add Capital Page
    body.register-bg
        p.introduction(style="margin-top: 18rem;") Set Capital for a Country
        
        //- Add Capital Form
        form(action="/add-capital", method="POST").contact-form-container
            label(for="countryCode") Country Code
            input(type="text", name="countryCode", required=true)

            label(for="cityName") City Name
            input(type="text", name="cityName", required=true)

            //- Display error messages
            if messages && messages.error
                .alert= messages.error

            .button-container
                button(type="submit").btn.btn-primary Submit
            
            //- Skip this step link and redirect to the Add Language page
            .link-container
                a(href="/admin/add-language-form").btn-link Skip this step
