extends ../layouts/layout.pug

block content
    //- Delete Country Page
    body.register-bg
        p.introduction(style="margin-top: 18rem;")
            span(style="color: red;") Important!
            |  Remove Country and its associated data across all tables
        
        //- Delete Country Form
        form(action="/delete-country", method="POST").contact-form-container
            label(for="countryCode") Country Code
            input(type="text", name="countryCode", required=true)

            //- Display error messages
            if messages && messages.error
                .alert.alert-danger= messages.error

            .button-container
                button(type="submit").btn.btn-danger Delete

            //- Skip this step link and redirect to the Delete City page
            .link-container
                a(href="/").btn-link Skip this step