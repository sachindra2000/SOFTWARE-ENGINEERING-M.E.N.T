extends ../layouts/layout.pug

block content
    //- Login Page
    body.register-bg
        p.introduction(style="margin-top: 18rem;") For access to our services, please register or login if you already have an account.
        
        //- Login Form
        form(action='/login', method='POST').form-container
            label(for='email') Email
            input(type='email', name='email', required=true)

            label(for='password') Password
            input(type='password', name='password', required=true)

            //- Error alert in place
            if message
                .alert #{message}

            .button-container
                button(type='submit').btn.btn-primary Login

            //- Registration link
            .link-container
                a(href='/register').btn-link Don't have an account? Register