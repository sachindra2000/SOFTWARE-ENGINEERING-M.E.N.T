extends ../layouts/layout.pug

block content
    //- Add New City Page
    body.register-bg
        p.introduction(style="margin-top: 18rem;") Add New City
        
        //- Add City Form
        form(action="/add-city", method="POST").contact-form-container
            label(for="name") City Name
            input(type="text", name="name", id="name", required=true)

            label(for="countryCode") Country Code
            input(type="text", name="countryCode", id="countryCode", required=true)

            label(for="district") District
            input(type="text", name="district", id="district")

            label(for="population") Population
            input(type="number", name="population", id="population")

            //- Display error messages
            if messages && messages.error
                .alert= messages.error

            .button-container
                button(type="submit").btn.btn-primary Submit

            //- Skip this step link and redirect to the Set Capital page
            .link-container
                a(href="/admin/set-capital-form").btn-link Skip this step
